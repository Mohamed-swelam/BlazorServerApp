@page "/Departments/Index"

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Departmant List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3 ">
            <partial name="_Notification" />
            <div class="col-12 text-end">
                <a href="/Departments/Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Department
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Students</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in departmants ?? new())
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            @{
                                List<string> studentNames = item.Students
                                .Select(student => student.Name)
                                .ToList();
                                string? formattedStudentNames = string.Join(", ", studentNames);
                            }
                            @formattedStudentNames
                        </td>
                        <td>
                            <div class="w-30 btn-group" role="group">
                                <a href="/Departments/Upsert/@item.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                            </div>
                            <div class="w-30 btn-group" role="group">
                                <a href="/Departments/Delete/@item.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>